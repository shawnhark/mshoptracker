%section.login.container
  %h1 Log In
  %br
  %form.form-horizontal{:role => "form"}
    .well
      %fieldset
      = form_for(:session, url: login_path) do |f|
        %br
        .form-group
          %label.col-sm-2.control-label Email
          .col-sm-10
            = f.email_field :email, placeholder: "Please enter your email address...", class: "form-control"
        .form-group
          %label.col-sm-2.control-label Password
          .col-sm-10
            = f.password_field :password, placeholder: "Please enter your password...", class: "form-control"
        .form-group
          .col-sm-offset-2.col-sm-10
            = f.submit "Log In Now", class: "btn btn-primary btn-block"
  %form.form-horizontal{:role => "form"}
    .form-group
      .col-sm-offset-3.col-sm-9
        %p
          %h4 New user? #{link_to "Sign up now!", register_path}